<h1>Edit Recipe</h1>

<% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
  <%= form_for recipe_ingredient do |f| %>
    <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>
    <%= f.label :amount %>
    <%= f.number_field :amount, step: :any %>
    
    <%= f.submit 'Edit Ingredient' %>
  <% end %>
<% end %>